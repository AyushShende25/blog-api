	"license": "MIT",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^5.0.1",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.16",
		"redis": "^4.7.0",
		"winston": "^3.17.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.9.1",
		"@types/nodemailer": "^6.4.17",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"prisma": "^5.22.0",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3"
