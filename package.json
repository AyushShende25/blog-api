{
  "name": "blog-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"node dist/server.js\"",
    "dev:worker": "tsup src/jobs/worker.ts --watch --onSuccess \"node dist/jobs/worker.js\"",
    "start": "node dist/server.js",
    "start:worker": "node dist/jobs/worker.js",
    "build": "tsup src/server.ts src/jobs/worker.ts",
    "clean": "rm -rf dist",
    "format": "biome check --write ./src",
    "prepare": "husky || true"
  },
  "author": "Ayush",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node src/utils/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.796.0",
    "@aws-sdk/s3-request-presigner": "^3.796.0",
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.44.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "prisma": "^6.3.1",
    "redis": "^4.7.0",
    "sanitize-html": "^2.16.0",
    "slugify": "^1.6.6",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.1",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
